<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="130dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dip"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    >
    <RelativeLayout

        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_margin="10dp"
            android:id="@+id/ivRelatedArtist"/>
        <TextView
            android:layout_below="@+id/ivRelatedArtist"
            android:padding="3dp"
            android:id="@+id/tvRelatedArtist"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="15sp"
            android:autoSizeStepGranularity="2sp"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textStyle="normal"/>

    </RelativeLayout>



</androidx.cardview.widget.CardView>