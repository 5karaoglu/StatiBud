<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/fragment_detailed_artist_shimmer"
        />
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.detailed.artist.DetailedArtistFragment"
        android:background="@color/colorPrimaryDark">

        <androidx.constraintlayout.widget.Group
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="appBarDetailedArtist,fabDetailedArtist,nsvDetailedArtist"
            android:visibility="gone"/>
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarDetailedArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:fitsSystemWindows="true">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbarArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/colorPrimary"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginStart="48dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_margin="20dp"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/iv"
                        android:src="@mipmap/ic_launcher"
                        app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@id/tvArtistName"
                        android:layout_below="@id/iv"
                        android:text="Love YoksunlarÄ±"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        app:layout_collapseMode="parallax"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:id="@+id/linear"
                        android:layout_below="@+id/tvArtistName"
                        android:layout_margin="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvPop"
                            android:text="@string/popularity"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:gravity="center_horizontal"
                            android:textStyle="bold"
                            android:layout_margin="10dp"
                            android:padding="5dp"/>
                        <RatingBar
                            android:id="@+id/dtRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:progress="5"
                            android:max="10"
                            android:stepSize="0.1"
                            android:clickable="false"
                            android:progressTint="@color/colorAccent"
                            android:progressBackgroundTint="@color/colorPrimary" />
                    </LinearLayout>
                </RelativeLayout>
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/detailedToolbar"
                    android:layout_width="match_parent"
                    app:titleTextAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:titleTextColor="@android:color/white"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:navigationIcon="@drawable/ic_arrow_back"
                    app:layout_collapseMode="pin"/>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabDetailedArtist"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_spotify"
            android:backgroundTint="@color/colorPrimary"
            app:borderWidth="0dp"
            app:maxImageSize="40dp"
            app:fabCustomSize="60dp"/>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsvDetailedArtist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/appBarDetailedArtist"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/top_tracks"
                    android:textSize="20sp"
                    android:id="@+id/tvTopTracks"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textStyle="normal"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:clipToPadding="false"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recyclerTopTracks"
                    android:layout_below="@+id/tvTopTracks" />
                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/albums"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:id="@+id/tvAlbums"
                    android:layout_below="@+id/recyclerTopTracks"
                    android:textColor="@color/white"
                    android:textStyle="normal"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:clipToPadding="false"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recyclerAlbums"
                    android:scrollbars="horizontal"
                    android:layout_below="@+id/tvAlbums"
                    android:orientation="vertical" />
                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/similar_artists"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:id="@+id/tvRelatedArtists"
                    android:layout_below="@+id/recyclerAlbums"
                    android:textColor="@color/white"
                    android:textStyle="normal"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:clipToPadding="false"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/tvRelatedArtists"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/recyclerRelatedArtists" />
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>



    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>