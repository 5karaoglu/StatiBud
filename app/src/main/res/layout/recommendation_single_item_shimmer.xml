<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">
        <ImageView
            android:layout_margin="2.5dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/ivRecommendation"
            android:background="@color/shimmer_placeholder"/>

        <TextView
            android:id="@+id/tvRecommendation"
            android:background="@color/shimmer_placeholder"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivRecommendation"
            android:layout_alignStart="@+id/ivRecommendation"
            android:layout_alignEnd="@+id/ivRecommendation"
            android:layout_marginTop="2.5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvRecommendationArtist"
            android:background="@color/shimmer_placeholder"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvRecommendation"
            android:layout_alignEnd="@+id/tvRecommendation"
            android:layout_alignStart="@id/tvRecommendation"
            android:layout_marginTop="2.5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/colorgray2"
            android:textSize="12sp"
            android:textStyle="normal" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>